      <div class="d-flex justify-content-between">
      <!-- <div> </div> -->
      <h1 class="modal-title fs-5 m-4" id="exampleModalLabel">User</h1>
      <div class="d-grid gap-2 col-6 mx-auto m-4">
        <button class="btn btn-outline-secondary" type="button" id="addProject">Add New Project</button>
      </div>
      <img src="../../moon-solid.svg" id="moon" style="margin-right:40px; width:30px; 
      filter: invert(53%) sepia(2%) saturate(4%) hue-rotate(7deg) brightness(93%) contrast(90%);">

    </div>

    
      <table class="table table-striped table-hover container">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Projects</th>
            <th scope="col"> </th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody id="items">
        </tbody>
        
      </table>
      <div class="container">
        <button onclick="history.back()" class="btn btn-secondary">Go Back</button>
      </div>
      
    <!-- Project Modal -->
    <div class="modal fade" id="ProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title fs-5" id="modal-project-title">Project Description</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body" id="modal-project">
            Hi!!! I am default Project 

          </div>
      </div>
      </div>
    </div>

    <!-- addProject-Modal -->
    <div class="modal fade" id="addProjectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Project ðŸ§¾</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
              <!-- <span aria-hidden="true">&times;</span> -->
            </button>
          </div>
          <div class="modal-body">
            <!-- <form> -->
              <div class="form-group">
                <label for="project-name" class="col-form-label">Project Name:</label>
                <input type="text" class="form-control" id="project-name">
              </div>
              <div class="form-group">
                <label for="add-text" class="col-form-label">Project Details:</label>
                <textarea class="form-control" id="add-text" rows="8"></textarea>
              </div>
              <div class="modal-footer">
            
                <button type="submit" class="btn btn-primary" id="new-project" data-bs-dismiss="modal">Submit</button>
              </div>
            <!-- </form> -->
          </div>
          
        </div>
      </div>
    </div>

    <!-- updateProject-Modal -->
    <div class="modal fade" id="editProjectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Project ðŸ§¾</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
              <!-- <span aria-hidden="true">&times;</span> -->
            </button>
          </div>
          <div class="modal-body">
            <!-- <form> -->
              <div class="form-group">
                <label for="edit-project-name" class="col-form-label">Project Name:</label>
                <input type="text" class="form-control" id="edit-project-name">
              </div>
              <div class="form-group">
                <label for="edit-text" class="col-form-label">Project Details:</label>
                <textarea class="form-control" id="edit-text" rows="8"></textarea>
              </div>
              <div class="modal-footer">
            
                <button type="submit" class="btn btn-primary" id="edit-project" data-bs-dismiss="modal">Update</button>
              </div>
            <!-- </form> -->
          </div>
          
        </div>
      </div>
    </div>

    <div class="toast align-items-center text-bg-primary border-0 center" role="alert" style="z-index:100;position:absolute;top:0;left:40%;width:20%" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body" id="toast-body">
          Hello, world! This is a toast message.
        </div>
      </div>
    </div>
    
